# Stack: vpn | Host: {{ inventory_hostname }}

## Global
MEM_LIMIT={{ docker_mem_limit }}
RESTART={{ docker_restart }}
TZ={{ docker_tz }}
PUID={{ docker_puid }}
PGID={{ docker_pgid }}
UMASK={{ docker_umask }}
APPSDIR={{ docker_appsdir }}

## Wireguard network mode (all services share wireguard's network)
NETWORK_MODE=service:wireguard
DEPENDS_ON=wireguard

## Wireguard
WG_SERVERURL={{ vps_fqdn }}
WG_SERVERPORT=51820
WG_PEERS=3
WG_INTERNAL_SUBNET={{ vault_wg_internal_subnet }}

## Docker Proxy
DP_CONTAINERS=1
DP_POST=1
DP_INFO=1
DP_VOLUMES=1
DP_SECRETS=1
DP_IMAGES=1
DP_NETWORKS=1
DP_ALLOW_RESTARTS=1

## NFS (exports /opt to tantive-iv code-server)
NFS_SHARED_DIRECTORY=/nfsshare
NFS_SYNC=true

## Beszel Agent
BESZEL_LISTEN=45876
BESZEL_KEY={{ docker_beszel_key }}
