## Global
MEM_LIMIT={{ docker_mem_limit }}
RESTART={{ docker_restart }}
TZ={{ docker_tz }}
PUID={{ docker_puid }}
PGID={{ docker_pgid }}
UMASK={{ docker_umask }}
APPSDIR={{ docker_appsdir }}

## Container Images
WG_IMAGE={{ container_definitions.wireguard.image }}
WG_TAG={{ container_definitions.wireguard.tag }}
NPM_IMAGE={{ container_definitions.npm.image }}
NPM_TAG={{ container_definitions.npm.tag }}
SOCKET_PROXY_IMAGE={{ container_definitions.socket_proxy.image }}
SOCKET_PROXY_TAG={{ container_definitions.socket_proxy.tag }}
DOZZLE_IMAGE={{ container_definitions.dozzle.image }}
DOZZLE_TAG={{ container_definitions.dozzle.tag }}
NFS_IMAGE={{ container_definitions.nfs.image }}
NFS_TAG={{ container_definitions.nfs.tag }}
BESZEL_IMAGE={{ container_definitions.beszel.image }}
BESZEL_TAG={{ container_definitions.beszel.tag }}
BESZEL_AGENT_IMAGE={{ container_definitions.beszel_agent.image }}
BESZEL_AGENT_TAG={{ container_definitions.beszel_agent.tag }}

## Wireguard network mode (all services share wireguard's network)
NETWORK_MODE=service:wireguard
DEPENDS_ON=wireguard

## Wireguard
WG_SERVERURL={{ vps_fqdn }}
WG_SERVERPORT=51820
WG_PEERS=3
WG_INTERNAL_SUBNET={{ vault_wg_internal_subnet }}

## Docker Proxy
DP_CONTAINERS=1
DP_POST=1
DP_INFO=1
DP_VOLUMES=1
DP_SECRETS=1
DP_IMAGES=1
DP_NETWORKS=1
DP_ALLOW_RESTARTS=1

## NFS (exports /opt to dev VM code-server)
NFS_SHARED_DIRECTORY=/nfsshare
NFS_SYNC=true

## Beszel Agent
BESZEL_LISTEN=45876
BESZEL_KEY={{ docker_beszel_key }}
