## Global
MEM_LIMIT={{ docker_mem_limit }}
RESTART={{ docker_restart }}
TZ={{ docker_tz }}
PUID={{ docker_puid }}
PGID={{ docker_pgid }}
UMASK={{ docker_umask }}
APPSDIR={{ docker_appsdir }}

## Container Images
HA_IMAGE={{ container_definitions.homeassistant.image }}
HA_TAG={{ container_definitions.homeassistant.tag }}
GUAC_IMAGE={{ container_definitions.guacamole.image }}
GUAC_TAG={{ container_definitions.guacamole.tag }}
FIREFOX_IMAGE={{ container_definitions.firefox.image }}
FIREFOX_TAG={{ container_definitions.firefox.tag }}
XBACKBONE_IMAGE={{ container_definitions.xbackbone.image }}
XBACKBONE_TAG={{ container_definitions.xbackbone.tag }}
HOMEPAGE_IMAGE={{ container_definitions.homepage.image }}
HOMEPAGE_TAG={{ container_definitions.homepage.tag }}
HOMEBOX_IMAGE={{ container_definitions.homebox.image }}
HOMEBOX_TAG={{ container_definitions.homebox.tag }}
RICKROLL_IMAGE={{ container_definitions.rickroll.image }}
RICKROLL_TAG={{ container_definitions.rickroll.tag }}
DDNS_IMAGE={{ container_definitions.cloudflareddns.image }}
DDNS_TAG={{ container_definitions.cloudflareddns.tag }}

## Firefox
FF_DISPLAY_WIDTH=1280
FF_DISPLAY_HEIGHT=768
FF_SECURE_CONNECTION=0
FF_DARK_MODE=1
FF_WEB_AUDIO=1

## Guacamole
GUAC_EXTENSIONS=auth-sso-openid

## Homepage
HOMEPAGE_ALLOWED_HOSTS=dashboard.{{ domain_ext }},dashboard.{{ domain_ext_secondary }},landing.{{ domain_ext }},landing.{{ domain_ext_secondary }}

## Cloudflare DDNS
DDNS_INTERVAL=300
DDNS_DETECTION_MODE=dig-whoami.cloudflare
DDNS_LOG_LEVEL=1
DDNS_CF_APIKEY={{ docker_cloudflare_api_key }}
DDNS_CF_HOSTS=vpn.{{ domain_ext }}
DDNS_CF_ZONES={{ domain_ext }}
DDNS_CF_RECORDTYPES='A;A'
EMAIL={{ docker_email }}
