# Stack: apps | Host: {{ inventory_hostname }}

## Global
MEM_LIMIT={{ docker_mem_limit }}
RESTART={{ docker_restart }}
TZ={{ docker_tz }}
PUID={{ docker_puid }}
PGID={{ docker_pgid }}
UMASK={{ docker_umask }}
APPSDIR={{ docker_appsdir }}

## Firefox
FF_DISPLAY_WIDTH=1280
FF_DISPLAY_HEIGHT=768
FF_SECURE_CONNECTION=0
FF_DARK_MODE=1
FF_WEB_AUDIO=1

## Guacamole
GUAC_EXTENSIONS=auth-sso-openid

## Homepage
HOMEPAGE_ALLOWED_HOSTS=dashboard.{{ docker_base_domain }},dashboard.smdion.com,landing.{{ docker_base_domain }},landing.smdion.com

## Cloudflare DDNS
DDNS_INTERVAL=300
DDNS_DETECTION_MODE=dig-whoami.cloudflare
DDNS_LOG_LEVEL=1
DDNS_CF_APIKEY={{ docker_cloudflare_api_key }}
DDNS_CF_HOSTS=vpn.{{ docker_base_domain }}
DDNS_CF_ZONES={{ docker_base_domain }}
DDNS_CF_RECORDTYPES='A;A'
EMAIL={{ docker_email }}
